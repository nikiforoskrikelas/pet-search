<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/quantum_teal900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/quantum_teal100</item>
        <item name="colorSurface">#FFFBFA</item>
        <item name="colorOnSurface">@color/quantum_teal100</item>
        <item name="colorError">@color/quantum_vanillaredA400</item>
        <item name="colorOnError">#FFFBFA</item>
        <item name="colorControlActivated">@color/quantum_teal100</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/quantum_teal900</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- Base application theme with action bar. -->
    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/quantum_teal900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/quantum_teal100</item>
        <item name="colorSurface">#FFFBFA</item>
        <item name="colorOnSurface">@color/quantum_teal100</item>
        <item name="colorError">@color/quantum_vanillaredA400</item>
        <item name="colorOnError">#FFFBFA</item>
        <item name="colorControlActivated">@color/quantum_teal100</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/quantum_teal900</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextInputLayoutOutlineStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.HintText</item>
        <item name="android:singleLine">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="startIconTint">@color/white_greyish</item>
        <item name="helperTextTextColor">@color/white</item>
    </style>

    <style name="Widget.App.TextField.Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.HintText</item>
    </style>


    <style name="TextAppearance.App.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.TextInputLayout.FilledBox" parent="ShapeAppearance.App.SmallComponent">
        <item name="cornerSizeBottomLeft">@dimen/mtrl_textinput_box_corner_radius_small</item>
        <item name="cornerSizeBottomRight">@dimen/mtrl_textinput_box_corner_radius_small</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
        <item name="android:color">@color/grey</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_grey_24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/quantum_grey800</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/background_color</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white_greyish</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/quantum_grey800</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/quantum_grey800</item>
    </style>

</resources>
