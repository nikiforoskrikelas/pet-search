<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="nk00322.surrey.petsearch.fragments.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_welcomeFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_welcomeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="nk00322.surrey.petsearch.fragments.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_signupFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_signupFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="nk00322.surrey.petsearch.fragments.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signinFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_signinFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <action
            android:id="@+id/action_signinFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
        <argument
            android:name="registered_email"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/meFragment"
        android:name="nk00322.surrey.petsearch.fragments.MeFragment"
        android:label="fragment_me"
        tools:layout="@layout/fragment_me">
        <action
            android:id="@+id/action_meFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out"/>
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="nk00322.surrey.petsearch.fragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="nk00322.surrey.petsearch.fragments.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_notificationsFragment_to_meFragment"
            app:destination="@id/meFragment" />
    </fragment>
    <fragment
        android:id="@+id/organizeFragment"
        android:name="nk00322.surrey.petsearch.fragments.OrganizeFragment"
        android:label="fragment_organize"
        tools:layout="@layout/fragment_organize">
        <action
            android:id="@+id/action_organizeFragment_to_searchPartiesFragment"
            app:destination="@id/searchPartiesFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchPartiesFragment"
        android:name="nk00322.surrey.petsearch.fragments.SearchPartiesFragment"
        android:label="fragment_search_parties"
        tools:layout="@layout/fragment_search_parties">
        <action
            android:id="@+id/action_searchPartiesFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="nk00322.surrey.petsearch.fragments.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:enterAnim="@anim/right_enter"
            app:exitAnim="@anim/right_out">
        </action>
    </fragment>
</navigation>