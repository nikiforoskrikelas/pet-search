<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_toast_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

<!--    Code from https://www.androhub.com/login-signup-and-forgot-password-screen-design-android/-->
    <TextView
        android:id="@+id/toast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_info_outline_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:textColor="#707C80"
        android:textSize="15sp" />
</RelativeLayout>